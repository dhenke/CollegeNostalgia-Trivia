        </activity> 
        
        <activity android:name=".LeaderboardScreen"
        android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.triviarea.main.LeaderboardScreen" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>   
        
        <activity android:name=".Register">
            <intent-filter>
                <action android:name="android.triviarea.main.Register" />
                <category android:name="android.intent.category.DEFAULT" />
