            <intent-filter>
                <action android:name="android.triviarea.main.AutoPasswordReset" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>  

        <activity android:name=".ManualPasswordReset"
        android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.triviarea.main.ManualPasswordReset" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>  

    </application>
    
    <uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.INTERNET"/> 
	
</manifest>